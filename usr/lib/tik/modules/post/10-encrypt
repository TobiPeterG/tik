crypt_dir=/var/lib/tik/crypt
if [ ! -d ${crypt_dir} ]; then
    prun /usr/bin/mkdir -p ${crypt_dir}
fi

generate_recoveryKey() {
    modhex=('c' 'b' 'd' 'e' 'f' 'g' 'h' 'i' 'j' 'k' 'l' 'n' 'r' 't' 'u' 'v')
    mapfile -t raw_key < <(hexdump -v --format '1/1 "%u\n"' -n 32 /dev/random)
    [ "${#raw_key[@]}" = 32 ]
    key=""
    for ((i=0;i<"${#raw_key[@]}";++i)); do
        [ "$i" -gt 0 ] && [ "$((i%4))" -eq 0 ] && key="$key-"
        c="${raw_key[i]}"
        key="$key${modhex[$((c>>4))]}${modhex[$((c&15))]}"
    done
}

display_recoveryKey() {
    log "Displaying Recovery Key"
    zenity --width=500 --height=500 --no-wrap --warning --title="Encryption Recovery Key" --text="A secret recovery key has been generated for your Aeon installation:\n\n    <b><big>$key</big></b>\n\nPlease save this secret recovery key at a secure location\nIt may be used to regain access to your system if the other credentials have been lost or forgotten\nThe recovery key can be used in place of a password whenever authentication is requested\n\nYou may optionally scan the recovery key off screen:\n<span face='monospace'>$(qrencode $key -t UTF8i)</span>"
    log "Recovery Key Dialogue Dismissed"
}

encrypt_disk() {
    probe_partitions $TIK_INSTALL_DEVICE "btrfs" "/usr/lib/os-release"
    if [ -z "${probedpart}" ]; then
        error "ENCRYPTION FAILED: Aeon Installation NOT FOUND"
    fi
    prun /usr/bin/mkdir ${crypt_dir}/mnt
    prun /usr/bin/mount -o compress=zstd:1 ${probedpart} ${crypt_dir}/mnt
    prun /usr/bin/systemd-repart --pretty 0 --root ${crypt_dir}/mnt --dry-run=0 ${probedpart}
    prun /usr/bin/mount -o compress=zstd:1,subvol=/@/var ${probedpart} ${crypt_dir}/mnt/var
    prun /lib/systemd/systemd-growfs ${crypt_dir}/mnt/var
    prun /usr/bin/umount ${crypt_dir}/mnt/var
    prun /usr/sbin/btrfs filesystem resize -32m /mnt
    prun /usr/bin/umount ${crypt_dir}/mnt
    prun /usr/sbin/cryptsetup reencrypt --force-password --encrypt --reduce-device-size 32m --init-only ${probedpart} cr_root <<<"$key"
    #FIXME- can't import token on device prepared for encryption
    #echo '{"type":"systemd-recovery","keyslots":["0"]}' | prun /usr/sbin/cryptsetup token import "${probedpart}"
    prun /usr/sbin/btrfs rescue fix-device-size /dev/mapper/cr_root
    prun /usr/bin/mount -o compress=zstd:1 /dev/mapper/cr_root ${crypt_dir}/mnt
    prun /usr/bin/mount -o compress=zstd:1,subvol=/@/var /dev/mapper/cr_root ${crypt_dir}/mnt/var
    etcmountcmd=$(cat ${crypt_dir}/mnt/etc/fstab | grep "overlay /etc" | sed 's/\/sysroot\//${crypt_dir}\/mnt\//g' | sed 's/\/work-etc.*/\/work-etc ${crypt_dir}\/mnt\/etc\//' | sed 's/overlay \/etc overlay/\/usr\/bin\/mount -t overlay overlay -o/')
    eval prun "$etcmountcmd"
    echo "cr_root ${probedpart} none x-initrd.attach" | prun tee ${crypt_dir}/mnt/etc/crypttab
    (cat | prun tee ${crypt_dir}/mnt/etc/systemd/system/cryptsetup-reencrypt-crroot.service) <<EOF
[Unit]
Description=cryptsetup-reencrypt-crroot service

[Service]
Type=oneshot
ExecStart=/usr/sbin/cryptsetup reencrypt --resume-only /dev/mapper/cr_root

[Install]
WantedBy=default.target
EOF
    probe_partitions $TIK_INSTALL_DEVICE "vfat" "/EFI/systemd/shim.efi"
    prun /usr/bin/mount ${probedpart} ${crypt_dir}/mnt/boot/efi
    prun /usr/bin/mount -o compress=zstd:1,subvol=/@/.snapshots /dev/mapper/cr_root ${crypt_dir}/mnt/.snapshots
    prun /usr/bin/mount -t tmpfs tmpfs "${crypt_dir}/mnt/run"
    prun /usr/bin/mount -t tmpfs tmpfs "${crypt_dir}/mnt/tmp"
    for i in proc dev sys; do
        prun /usr/bin/mount --bind "/$i" "${crypt_dir}/mnt/$i"
    done
    prun /usr/bin/chroot ${crypt_dir}/mnt <<EOT
sdbootutil mkinitrd
systemctl enable cryptsetup-reencrypt-crroot.service
EOT
    for i in proc dev sys run tmp 'boot/efi' var etc '.snapshots/1/snapshot/etc' '.snapshots'; do
        prun-opt /usr/bin/umount "${crypt_dir}/mnt/$i"
    done
    prun /usr/bin/umount ${crypt_dir}/mnt
    wait_count=0
    while ! prun-opt /usr/sbin/cryptsetup luksClose /dev/mapper/cr_root && [ ${wait_count} -lt 5 ]; do
        sleep 1
        wait_count=$((wait_count + 1))
    done
    prun /usr/bin/rmdir ${crypt_dir}/mnt
}

generate_recoveryKey
display_recoveryKey
encrypt_disk